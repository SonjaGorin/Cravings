{{log recipe}}
<section class="h-75">

     <div class="container">
          <div class="row">
               <h3 class="fw-normal mb-3" style="letter-spacing: 1px;">{{ recipe.name }}</h3>
          </div>
          
          <div class="row"> <!-- Category row -->
               <div class="col-md-6 text-black">
                    <div class="mb-3">
                         <label for="recipename" class="form-label">Category Name</label>
                         <input class="form-control" id="categoryname" type="text" value="{{ recipe.category.name }}"
                              aria-label="Category name">
                    </div>
               </div>
          </div>

          <!-- Header for ingredients -->
          <div class="row">
               <div class="col-md-10">
                    <div class="row">
                         <div class="col-md-6">
                              <p>Ingredient Name</p>
                         </div>
                         <div class="col-md-3 text-center">
                              <p>Measurement</p>
                         </div>
                         <div class="col-md-2 text-center">
                              <p>Unit</p>
                         </div>
                    </div>
               </div>
          </div>

          <!-- Section Ingredients -->
          <div class="row mb-1">
               <div class="col-md-10 ingredients-section">
                    {{#each recipe.ingredients as |ingredient| }}
                    <div class="row mb-1">
                         <div class="col-md-6">
                              <input class="form-control" type="text" readonly value="{{ingredient.ingredient}}" />
                         </div>
                         <div class="col-md-3 text-center">
                              <input class="form-control" type="text" readonly value="{{ingredient.measurement}}" />
                         </div>
                         <div class="col-md-2">
                              <input class="form-control" type="text" readonly/ value="{{ingredient.unit}}">
                         </div>
                    </div>
                    {{/each}}
               </div>
          </div>

          <!-- Section Preparations -->
          <div class="row mt-3">
               <div class="col-md-10">
                    <label for="preparation" class="form-label">Preparation Instructions</label>
                    <textarea class="form-control mb-3" id="preparation" rows="10">{{ recipe.instructions }}</textarea>
                    <button class="btn mr-1 mt-1" style="background-color: #842029;color:white;width:150px"><i
                              class="bi bi-apple"></i> Edit</button>
                    <a class="btn btn-dark mr-1 mt-1" style="width:150px" href="/list"><i class="bi bi-door-open"></i>
                         Go Back</a>
               </div>

          </div>

     </div>
</section>